// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Proxy {
    id          String    @id   @default(cuid())
    username    String
    password    String
    address     String    @unique
    port_http   Int
    port_socks5 Int
    country     String
    city        String?
    used        Int

    @@map("proxies")
}

model Anime {
    id          String          @id  @default(cuid())
    anilistId   Int             @unique
    coverImage  String?
    status      AiringStatus
    season      AiringSeason
    title       Json
    relations   Relation[]
    episodes    Episode[]
    next        DateTime?
    genre       Genre[]

    @@map("anime")
}

model Genre {
    id          String     @id  @default(cuid())
    name        String     @unique
    anime       Anime[]

    @@map("genre")
}

model Episode {
    id          String     @id  @default(cuid())
    animeId     String
    anime       Anime      @relation(fields: [animeId], references: [id])
    number      Int        @unique
    title       String?
    sources     Source[]

    @@map("episode")
}

model Source {
    id          String     @id  @default(cuid())
    url         String     @unique
    websiteId   String
    website     Website    @relation(fields: [websiteId], references: [id])
    episodeId   String
    episode     Episode    @relation(fields: [episodeId], references: [id])
    resolution  String?
    format      String?

    @@map("source")
}

model Relation {
    id          String     @id  @default(cuid())
    anime       Anime      @relation(fields: [animeId], references: [id])
    animeId     String
    type        RelationType

    @@map("relation")
}

model Website {
    id          String     @id  @default(cuid())
    name        String
    url         String     @unique
    locale      String
    sources     Source[]

    @@map("website")
}

enum RelationType {
    PREQUEL
    SEQUEL
}

enum AiringStatus {
    FINISHED
    RELEASING
    NOT_YET_RELEASED
    CANCELLED
    HIATUS
}

enum AiringSeason {
    SPRING
    SUMMER
    FALL
    WINTER
}